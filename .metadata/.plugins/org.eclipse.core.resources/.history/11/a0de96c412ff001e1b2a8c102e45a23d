package com.univates.api.security;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

import com.univates.api.util.ApiConfig;

/**
 * @author ev
 */
@Service
public class Authenticator
{
    @Autowired
    private PasswordEncoder encoder;
    
    public boolean authenticate( String user, String password )
    {
        System.out.println( encoder.encode( ApiConfig.API_USER ) );
        System.out.println( encoder.encode( ApiConfig.API_PASS ) );
        return ( encoder.matches( user, ApiConfig.USER_LOGIN ) && encoder.matches( password, ApiConfig.USER_PASS ) );
    }
}
