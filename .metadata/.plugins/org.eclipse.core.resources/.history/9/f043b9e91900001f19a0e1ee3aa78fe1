package com.univates.api.services;


import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpMethod;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;

import com.univates.api.records.request.EventRecord;
import com.univates.api.security.ApiConfig;

import jakarta.validation.Valid;

/**
 * @author ev
 */
@Controller
public class EventService
{
    @Autowired
    private ApiService apiService;
    
    /**
     * saveUser
     *
     */
    public ResponseEntity <Object> saveEvent( @Valid EventRecord er )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.callApi( er, ApiConfig.API_URL, HttpMethod.POST ) );
    }

    /**
     * saveEvent
     *
     */
    public ResponseEntity <Object> saveEvent( Integer id, @Valid EventRecord er )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.callApi( er, ApiConfig.API_URL + "/" + id, HttpMethod.PUT ) );
    }

    /**
     * getAll
     *
     */
    public ResponseEntity<List<EventRecord>> getAll()
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.callApi( null, ApiConfig.API_URL, HttpMethod.GET ) );
    }

    /**
     * getUserEvents
     *
     */
    public ResponseEntity <Object> getUserEvents( Integer id )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.callApi( null, ApiConfig.API_URL + "/" + id, HttpMethod.GET ) );
    }
}
