package com.univates.api.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpMethod;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.univates.api.records.request.RegistrationRecord;
import com.univates.api.security.ApiConfig;

import jakarta.validation.Valid;

/**
 * @author ev
 */
@Service
public class RegistrationService
{
    
    @Autowired
    private ApiService apiService;

    /**
     * addRegistration
     *
     */
    public ResponseEntity <Object> addRegistration( @Valid RegistrationRecord rr )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.returnRegistration( rr, ApiConfig.API_URL, HttpMethod.POST ) );
    }

    /**
     * getRegistrations
     *
     */
    public ResponseEntity<List<Object>> getRegistrations( Integer userId )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.returnRegistrations( ApiConfig.API_URL + "/" + userId, HttpMethod.GET ) );
    }

    /**
     * checkIn
     *
     */
    public ResponseEntity <Object> checkIn( Integer eventId, Integer userId )
    {
        return null;
    }

    /**
     * cancelRegistration
     *
     */
    public ResponseEntity <Object> cancelRegistration( Integer eventId, Integer userId )
    {
        return null;
    }
    
}
