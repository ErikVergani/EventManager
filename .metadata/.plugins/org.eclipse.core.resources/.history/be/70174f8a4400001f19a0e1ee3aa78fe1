package com.univates.api;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

/**
 * @author ev
 */
@Service
public class Auth
{
    public static final String API_USER = "$2a$10$P/FT4rgeN2tjxRXXhKkEOOJ7gqA7dE5zTwa3q1KNAQxktHu8cXB.O";
    public static final String API_PASS = "$2a$10$O4NfBIJkIklaChfhsDwGF.cwfUaWbkKis0TG32TF85kObtjCxGZn6";
    
    @Autowired
    private PasswordEncoder encoder;
    
    public boolean authenticate( String user, String password )
    {
        return ( encoder.matches( user, API_USER ) && encoder.matches( password, API_PASS ) );
    }
}
