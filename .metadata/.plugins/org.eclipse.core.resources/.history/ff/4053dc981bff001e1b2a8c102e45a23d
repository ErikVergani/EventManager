package com.univates.api.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Configuration;
import org.springframework.http.HttpMethod;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;

import com.univates.api.records.request.EventRecord;

import jakarta.validation.Valid;

/**
 * @author ev
 */
@Controller
public class EventService
{
    @Autowired
    private ApiService apiService;
    
    /**
     * saveUser
     *
     */
    public ResponseEntity <Object> saveUser( @Valid EventRecord er )
    {
        return ResponseEntity.status( HttpStatus.OK ).body( apiService.callApi( er, HttpMethod.POST ) );
    }
}
