package com.univates.api.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.univates.api.exception.UnauthorizedException;
import com.univates.api.records.request.EventRecord;
import com.univates.api.records.response.EventResponseRecord;
import com.univates.api.security.Auth;
import com.univates.api.services.EventService;
import com.univates.api.services.LogsService;

import jakarta.validation.Valid;

/**
 * @author ev
 */
@RestController
@RequestMapping( "/api/events" )
public class EventController
{
    @Autowired
    private EventService eventService;
    
    @Autowired
    private LogsService logsService;
    
    @Autowired
    private Auth auth;
    
    @PostMapping
    public ResponseEntity<EventResponseRecord> addEvent( @RequestHeader String login, @RequestHeader String pass, @RequestHeader String loggedUser, @RequestBody @Valid EventRecord er )
    {
        if ( auth.authenticate( login, pass ) )
        {
            return eventService.saveEvent( er );
        }
        
        throw new UnauthorizedException();
    }
    
    @PutMapping( "/{id}" )
    public ResponseEntity<EventResponseRecord> updateEvent(  @RequestHeader String login, @RequestHeader String pass, @PathVariable( value = "id" ) Integer id, @RequestBody @Valid EventRecord er )
    {
        if ( auth.authenticate( login, pass ) )
        {
            return eventService.saveEvent( id, er );
        }
        
        throw new UnauthorizedException();
    }
    
    @GetMapping
    public ResponseEntity<List<EventResponseRecord>> getEvents()
    {
        return eventService.getAll();
    }
    
    @GetMapping( "/{id}" )
    public ResponseEntity <List<EventResponseRecord>> getUserEvents(  @RequestHeader String login, @RequestHeader String pass, @RequestHeader String loggedUser, @PathVariable( value = "id" ) Integer id )
    {
        if ( auth.authenticate( login, pass ) )
        {
            return eventService.getUserEvents( id );
        }
        
        throw new UnauthorizedException();
    }
}
