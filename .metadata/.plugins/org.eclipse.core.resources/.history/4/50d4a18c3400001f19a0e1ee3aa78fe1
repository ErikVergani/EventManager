package com.univates.api.handlers;

import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.ResponseStatus;

import com.univates.api.exception.HttpClientErrorException;
import com.univates.api.records.response.ErrorRecord;

/**
 * @author ev
 */
@ControllerAdvice
public class HttpClientErrorExceptionHandler
{
    @ExceptionHandler( HttpClientErrorException.class )
    @ResponseBody
    @ResponseStatus( HttpStatus.NOT_FOUND )
    public ErrorRecord handler( HttpClientErrorException e )
    {
        return new ErrorRecord( e.getStatusText(), e.getStatusCode().value() );
    }
}
