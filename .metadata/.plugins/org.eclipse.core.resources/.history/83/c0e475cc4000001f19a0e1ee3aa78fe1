package com.univates.api.handlers;

import org.springframework.web.bind.annotation.ControllerAdvice;

import com.univates.api.exception.UnauthorizedException;
import com.univates.api.records.response.ErrorRecord;

/**
 * @author ev
 */
@ControllerAdvice
public class UnauthorizedExceptionHandler
{
    
    public ErrorRecord handler( UnauthorizedException ex )
    {
        return new ErrorRecord( ex.getMessage(), ex.getStatusCode() );
    }
}
